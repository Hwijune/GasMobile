<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="250dip"
    android:layout_height="450dip"
    tools:context="iot.gasmobile.InformationActivity">

    <ImageView
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:layout_width="250dip"
        android:layout_height="150dip"/>
    <ImageView
        android:id="@+id/img2"
        android:scaleType="centerCrop"
        android:layout_width="250dip"
        android:layout_height="150dip"
        android:layout_below="@+id/img"/>

    <LinearLayout
        android:id="@+id/infolay1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/img2"
        android:gravity="center">
        <TextView
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="15dp"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="명이 왔다갔어요"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/infolay1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="대기오염도"/>
        <TextView
            android:id="@+id/information2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="15dp"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myblue"
            android:textColor="#ffffff"
            android:onClick="deletedata"
            android:layout_weight="1"
            android:text="청소끝!" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myblue"
            android:textColor="#ffffff"
            android:onClick="close2"
            android:layout_weight="1"
            android:text="다봤어요!" />

    </LinearLayout>
</RelativeLayout>